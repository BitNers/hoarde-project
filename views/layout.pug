- var currentYear = new Date().getFullYear()


doctype html
html
  head
    title= title
    link(rel="stylesheet", href="bootstrap/dist/css/bootstrap.min.css")
    script(src="bootstrap/dist/js/bootstrap.bundle.min.js")
  body

    nav.navbar.navbar-expand-lg(style="background-color: #d9d2e9;")
      a.navbar-brand(href="/" style="padding-left: 0.7rem") #{title}
      button.navbar-toggler(type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent")
        span.navbar-toggler-icon

      div.collapse.navbar-collapse#navbarSupportedContent
        ul.navbar-nav.mr-auto
          if loggedIn == false
            li.nav-item.active 
              a.nav-link(href="/login") Login
            li.nav-item
              a.nav-link(href="/register") Register
          else
            li.nav-item.active 
              a.nav-link(href="/user") Dashboard
            li.nav-item.active 
              a.nav-link(href="/user/bunker") Bunker
            li.nav-item.active 
              a.nav-link(href="/user/logout") Logout
          
    
    
    block content


    div.container-fluid(style="background-color: #d9d2e9; position:absolute; bottom:0; width:100%;" ) 
      footer.d-flex.flex-wrap.justify-content-between.align-items-center.py-3.my-6
        p.col-md-4.mb-0.text-muted &copy; #{currentYear} #{title}

        //a.col-md-4.d-flex.align-items-center.justify-content-center.mb-3.mb-md-0.me-md-auto.link-dark.text-decoration-none
